.modal
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 9999
  overflow: auto

.modal-back
  background: radial-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.7))
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0

.modal-dialog
  display: table
  width: 100%
  height: 100%

.modal-content-wrap
  display: table-cell
  vertical-align: middle
  padding: 30px 10px

.modal-content
  position: relative
  width: 500px
  background: #fff
  margin: 0 auto
  overflow: hidden