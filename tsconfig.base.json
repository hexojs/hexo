{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types",
      "lib/hexo"
    ],
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["**/node_modules", "**/.tmp*", "dist"]
}