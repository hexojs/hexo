    "module": "commonjs",
    "moduleResolution": "node16",
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
