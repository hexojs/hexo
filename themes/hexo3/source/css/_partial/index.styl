getting-started-bg = #c8c8c8
getting-started-height = 40px

intro-feature-margin = 50px
intro-feature-column = 3
intro-quick-start-column = 2

body.index
  background: url("images/shattered.png")

#banner
  padding: 150px 0 50px

#banner-title
  color: #555
  font: 300 35px font-title
  text-shadow: 1px 0 #eee
  line-height: 1.3

#banner-getting-started
  clearfix()
  padding: 30px 0

#banner-getting-started-prefix
  float: left
  background: getting-started-bg
  font-family: font-mono
  font-size: 16px
  padding-left: 15px
  color: #999
  line-height: getting-started-height

#banner-getting-started-input
  float: left
  background: getting-started-bg
  font-size: 16px
  font-family: font-mono
  color: #555
  border: none
  padding: 0 15px
  line-height: getting-started-height
  height: getting-started-height

#banner-getting-started-btn
  float: left
  background: #bbb
  padding: 0 15px
  color: #555
  text-decoration: none
  font-family: font-title
  font-size: 13px
  font-weight: 300
  line-height: getting-started-height
  &:hover
    background: #aaa
    color: #444

#banner-share
  padding: 100px 0 0

.intro-wrap
  background: #fff
  padding: 40px 0

.intro-title
  font-size: 30px
  font-weight: 300
  font-family: font-title
  color: color-default
  padding-bottom: 20px

.intro-feature-wrap
  clearfix()
  margin-right: intro-feature-margin * -1

.intro-feature
  float: left
  padding-right: intro-feature-margin
  padding-top: 30px
  width: ((page-width + intro-feature-margin) / intro-feature-column) - intro-feature-margin

.intro-quick-start
  width: ((page-width + intro-quick-start-column) / intro-quick-start-column) - intro-feature-margin

.intro-feature-title
  font-size: 18px
  color: color-default
  font-weight: bold

.intro-feature-desc
  color: color-default
  line-height: 1.6
  margin-top: 15px